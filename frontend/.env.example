# ==================== Environment Configuration ====================
NODE_ENV=development

# ==================== Next.js Configuration ====================
NEXT_PUBLIC_APP_NAME=ShopHub
NEXT_PUBLIC_APP_DESCRIPTION=Your premier e-commerce destination for quality products
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:9190/api

# ==================== API & Backend Configuration ====================
API_BASE_URL=http://localhost:9190/api
API_TIMEOUT=10000
INTERNAL_API_KEY=your_internal_api_key_here

# ==================== Authentication & Security ====================
JWT_SECRET=your_super_secure_jwt_secret_key_here_min_32_chars
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d
BCRYPT_ROUNDS=12
TOKEN_COOKIE_NAME=auth-token
REFRESH_TOKEN_COOKIE_NAME=refresh-token

# ==================== Database Configuration ====================
DATABASE_URL=postgresql://username:password@localhost:5432/shopub_db
REDIS_URL=redis://localhost:6379

# ==================== Third-Party Services ====================

# Payment Processing (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Email Service (Resend/SendGrid)
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM=ShopHub <noreply@shophub.com>
RESEND_API_KEY=re_your_resend_api_key

# File Storage (AWS S3 or Cloudflare R2)
UPLOAD_MAX_FILE_SIZE=10485760
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=shophub-uploads
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_R2_ACCESS_KEY=your_r2_access_key
CLOUDFLARE_R2_SECRET_KEY=your_r2_secret_key

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
PLAUSIBLE_ANALYTICS_URL=https://plausible.io
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# External APIs
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
GOOGLE_RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# ==================== Feature Flags ====================
FEATURE_PWA_ENABLED=true
FEATURE_SSR_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_EMAIL_VERIFICATION=true
FEATURE_SOCIAL_LOGIN=false
FEATURE_WISHLIST=true
FEATURE_PRODUCT_REVIEWS=true
FEATURE_COUPONS=true
FEATURE_GUEST_CHECKOUT=true

# ==================== Performance & Optimization ====================
IMAGE_OPTIMIZATION_ENABLED=true
IMAGE_CACHE_TTL=2592000
API_CACHE_ENABLED=true
API_CACHE_TTL=300
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ==================== E-commerce Specific ====================
DEFAULT_CURRENCY=USD
DEFAULT_TAX_RATE=0.1
FREE_SHIPPING_THRESHOLD=50
SHIPPING_RATE=5
INVENTORY_LOW_THRESHOLD=10
MAX_PRODUCT_QUANTITY=10
CART_SESSION_EXPIRY=604800

# ==================== Social Media & Integration ====================
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret

# ==================== Security Headers ====================
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'
X_FRAME_OPTIONS=SAMEORIGIN
X_CONTENT_TYPE_OPTIONS=nosniff
REFERRER_POLICY=strict-origin-when-cross-origin

# ==================== Development & Debugging ====================
DEBUG=enabled
LOG_LEVEL=debug
NEXT_TELEMETRY_DISABLED=1
SHOW_DEV_TOOLS=true

# ==================== Testing ====================
TEST_DATABASE_URL=postgresql://testuser:testpass@localhost:5432/shopub_test
CYPRESS_BASE_URL=http://localhost:3000

# ==================== Build Optimization ====================
NEXT_BUILD_ANALYZE=false
NEXT_BUILD_PROFILE=false
BUNDLE_ANALYZER=false
