# ==================== Environment Configuration ====================
NODE_ENV=production

# ==================== Next.js Configuration ====================
NEXT_PUBLIC_APP_NAME=ShopHub
NEXT_PUBLIC_APP_DESCRIPTION=Your premier e-commerce destination for quality products
NEXT_PUBLIC_SITE_URL=https://shophub.com
NEXT_PUBLIC_API_URL=https://api.shophub.com/api

# ==================== API & Backend Configuration ====================
API_BASE_URL=https://api.shophub.com/api
API_TIMEOUT=15000
INTERNAL_API_KEY=prod_internal_api_key_2024_secure_random_chars_64

# ==================== Authentication & Security ====================
JWT_SECRET=prod_jwt_secret_very_long_secure_random_string_min_64_chars_2024
JWT_EXPIRES_IN=2h
REFRESH_TOKEN_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
TOKEN_COOKIE_NAME=__Secure-auth-token
REFRESH_TOKEN_COOKIE_NAME=__Secure-refresh-token

# ==================== Database Configuration ====================
DATABASE_URL=postgresql://shophub_prod_user:${DB_PASSWORD}@prod-db.shophub.com:5432/shopub_prod
REDIS_URL=redis://prod-redis.shophub.com:6379

# ==================== Third-Party Services ====================

# Payment Processing (Stripe Live)
STRIPE_PUBLISHABLE_KEY=pk_live_51MnwBmB2qQ6h7g4s8f9g0h1j2k3l4m5n6o7p8q9r0s1t2u3v
STRIPE_SECRET_KEY=sk_live_51MnwBmB2qQ6h7g4s8f9g0h1j2k3l4m5n6o7p8q9r0s1t2u3v
STRIPE_WEBHOOK_SECRET=whsec_live_1234567890abcdef

# Email Service (Production - Resend)
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USER=prod_smtp_user
SMTP_PASS=${SMTP_PASSWORD}
SMTP_FROM=ShopHub <hello@shophub.com>
RESEND_API_KEY=re_live_1234567890abcdef

# File Storage (AWS S3 Production)
UPLOAD_MAX_FILE_SIZE=10485760
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_REGION=us-east-1
AWS_BUCKET_NAME=shophub-prod-uploads
CLOUDFLARE_ACCOUNT_ID=${CLOUDFLARE_ACCOUNT_ID}
CLOUDFLARE_R2_ACCESS_KEY=${CLOUDFLARE_R2_ACCESS_KEY}
CLOUDFLARE_R2_SECRET_KEY=${CLOUDFLARE_R2_SECRET_KEY}

# Analytics & Monitoring (Production)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
PLAUSIBLE_ANALYTICS_URL=https://plausible.shophub.com
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# External APIs (Production Keys)
GOOGLE_MAPS_API_KEY=${GOOGLE_MAPS_API_KEY}
GOOGLE_RECAPTCHA_SITE_KEY=6LcBxRkTAAAAAProdKey1234567890ABCDEF
GOOGLE_RECAPTCHA_SECRET_KEY=${GOOGLE_RECAPTCHA_SECRET_KEY}

# ==================== Feature Flags ====================
FEATURE_PWA_ENABLED=true
FEATURE_SSR_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_EMAIL_VERIFICATION=true
FEATURE_SOCIAL_LOGIN=true
FEATURE_WISHLIST=true
FEATURE_PRODUCT_REVIEWS=true
FEATURE_COUPONS=true
FEATURE_GUEST_CHECKOUT=true

# ==================== Performance & Optimization ====================
IMAGE_OPTIMIZATION_ENABLED=true
IMAGE_CACHE_TTL=2592000
API_CACHE_ENABLED=true
API_CACHE_TTL=900
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ==================== E-commerce Specific ====================
DEFAULT_CURRENCY=USD
DEFAULT_TAX_RATE=0.1
FREE_SHIPPING_THRESHOLD=50
SHIPPING_RATE=4.99
INVENTORY_LOW_THRESHOLD=10
MAX_PRODUCT_QUANTITY=10
CART_SESSION_EXPIRY=604800

# ==================== Social Media & Integration ====================
FACEBOOK_APP_ID=${FACEBOOK_APP_ID}
FACEBOOK_APP_SECRET=${FACEBOOK_APP_SECRET}
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
TWITTER_API_KEY=${TWITTER_API_KEY}
TWITTER_API_SECRET=${TWITTER_API_SECRET}
INSTAGRAM_APP_ID=${INSTAGRAM_APP_ID}
INSTAGRAM_APP_SECRET=${INSTAGRAM_APP_SECRET}

# ==================== Security Headers ====================
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
REFERRER_POLICY=strict-origin-when-cross-origin

# ==================== Development & Debugging ====================
DEBUG=disabled
LOG_LEVEL=warn
NEXT_TELEMETRY_DISABLED=1
SHOW_DEV_TOOLS=false

# ==================== Build Optimization ====================
NEXT_BUILD_ANALYZE=false
NEXT_BUILD_PROFILE=false
BUNDLE_ANALYZER=false
